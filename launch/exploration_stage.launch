<?xml version="1.0" encoding="utf-8"?>
<launch>

    <!-- ROS STAGE -->
    <param name="use_sim_time" value="true"/>
    <node pkg="stage_ros" type="stageros" name="stageros" args="-d $(find autonomous_exploration)/sim_worlds/map0.world"/>



    <!-- Transforms -->
    <node pkg="tf"
        type="static_transform_publisher"
        name="link1_broadcaster"
        args="-20 -20 0 0 0 0 world odom 100" />

    <!-- GMAPPING -->
    <node pkg="gmapping" type="slam_gmapping" name="GMAP" args="-d scan:=base_scan">
        <param name="xmin" value="-25.0"/>
        <param name="ymin" value="-25.0"/>
        <param name="xmax" value="25.0"/>
        <param name="ymax" value="25.0"/>
        <param name="delta" value="0.5" />
        <param name="odom_frame" value="world" />
    </node>

    <!-- Frontier Detect -->
    <!-- <node pkg="autonomous_exploration" type="frontier_lidar.py" name="Detect_frontier">
        <remap from="/map" to="/projected_map"/>
    </node> -->


    <!-- RVIZ Visualization -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find autonomous_exploration)/rviz/config.rviz"/>
    
</launch>
 
